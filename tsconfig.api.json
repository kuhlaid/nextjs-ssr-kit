{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./api",
    "checkJs": false,
    "noEmit": false,
    "module": "commonjs",
    "outDir": "build",
    "target": "es5",
    "paths": {
      "~api": ["./*"],
      "~env": ["../env/index"],
      "~logger": ["../logger/index"],
      "~controllers/*": ["controllers/*"],
      "~database/*": ["database/*"],
      "~database": ["database/index"],
      "~middlewares": ["middlewares/index"],
      "~models/*": ["models/*"],
      "~routes/*": ["routes/*"],
      "~routes": ["routes/index"],
      "~utils/*": ["utils/*"]
    }
  },
  "include": ["api/**/*.ts"]
}
